<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBGC"
    tools:context=".activity.RechargeActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toobar"
        layout="@layout/toolbar_main"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/animation_view"
        app:lottie_rawRes="@raw/mobile_payment"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/remail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:textColorHint="#493C3C"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/email_custom_input"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:hint="email" />
    <EditText
        android:id="@+id/ramount"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_currency_rupee_custom_input"
        android:drawablePadding="5dp"
        android:textSize="20dp"
        android:ems="10"
        android:textColorHint="#493C3C"
        android:textColor="@color/black"
        android:hint="amount"
        android:inputType="textPersonName"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/rphone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_phone_custom_input"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textColorHint="#493C3C"
        android:textColor="@color/black"
        android:hint="phone"
        android:inputType="textPersonName"
        android:padding="5dp"
        />

    <TextView
        android:id="@+id/rhid"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:ems="10"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_electric_meter_custom_input"
        android:drawablePadding="5dp"
        android:paddingStart="5dp"
        android:textColorHint="#493C3C"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textSize="20dp"
        android:hint="email" />

    <Button
        android:id="@+id/rrecharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="payment" />

    <TextView
        android:id="@+id/retu"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:gravity="center"

        android:inputType="textPersonName"
        />
</LinearLayout>